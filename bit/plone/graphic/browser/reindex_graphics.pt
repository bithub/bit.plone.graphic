<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bns.member">
  <body>
    <metal:block fill-slot="top_slot"
                 tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />

    <div metal:fill-slot="main">
      <tal:main-macro metal:define-macro="main">
	<h1 tal:content="string: Reindex graphics" />
	<form action="reindex_graphics" method="POST">
	  <tal:loop repeat="content view/get_content">
	    <div>
	      <input type="checkbox"
	      name="content:list"
	      checked
	      tal:attributes="value python:content[0]" />
	      <span tal:content="python:content[1]" />
	    </div>
	    </tal:loop>
	  <input type="submit" value="Reindex graphics" />
	</form>
      </tal:main-macro>
      </div>
  </body>
</html>

